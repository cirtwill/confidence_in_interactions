doi = {10.1046/j.1461-0248.2003.00398.x},
file = {:C$\backslash$:/Users/Alyssa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Dyer, Letourneau - 2003 - Top-down and bottom-up diversity cascades in detrital vs. living food webs.pdf:pdf},
isbn = {1461-023X},
issn = {1461023X},
journal = {Ecology Letters},
keywords = {Diversity,Food webs,Indirect effects,Piper,Trophic cascades,Tropics},
number = {1},
pages = {60--68},
title = {{Top-down and bottom-up diversity cascades in detrital vs. living food webs}},
volume = {6},
year = {2003}
}
@article{Wang2005,

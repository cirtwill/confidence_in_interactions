isbn = {0012-9658},
issn = {00129658},
journal = {Ecology},
keywords = {Alternative stable states,Freidlin-wentzell,Hamilton-jacobi,Quasi-potential,Regime shifts,Resilience,Stochastic differential equations,Stochastic dynamics},
number = {4},

doi = {10.1007/s00442-002-1137-8},
file = {:C$\backslash$:/Users/Alyssa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Gratton, Denno - 2003 - Seasonal shift from bottom-up to top-down impact in phytophagous insect populations.pdf:pdf},
isbn = {0044200211378},

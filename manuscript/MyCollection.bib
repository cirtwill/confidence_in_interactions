file = {:C$\backslash$:/Users/Alyssa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Dalton et al. - 2013 - Density- and trait-mediated top-down effects modify bottom-up control of a highly endemic tropical aquatic food w.pdf:pdf},
isbn = {1600-0706},
issn = {00301299},
journal = {Oikos},
number = {5},
pages = {790--800},
title = {{Density- and trait-mediated top-down effects modify bottom-up control of a highly endemic tropical aquatic food web}},

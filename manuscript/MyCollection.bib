keywords = {aggregation,biomass,contingency,interaction networks,macroecology,metabolism,scale,species},
number = {2},
pages = {763--776},
pmid = {17234043},
title = {{Are there general laws in parasite ecology?}},
volume = {134},
year = {2007}
}
@article{Turchin2001,

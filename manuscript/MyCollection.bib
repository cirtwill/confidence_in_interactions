file = {:C$\backslash$:/Users/Alyssa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Ness, Foster - 1999 - Parasite-associated phenotype modifications in threespine stickleback.pdf:pdf},
isbn = {0030-1299},
issn = {00301299},
journal = {Oikos},
number = {1},
pages = {127--134},
title = {{Parasite-associated phenotype modifications in threespine stickleback}},
volume = {85},
year = {1999}
}
@article{Mouritsen2003,

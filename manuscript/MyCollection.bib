file = {:C$\backslash$:/Users/Alyssa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Hammill et al. - 2015 - Food web persistence is enhanced by non-trophic interactions.pdf:pdf},
isbn = {0044201532},

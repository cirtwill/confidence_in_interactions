file = {:C$\backslash$:/Users/Alyssa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Brose et al. - 2016 - Predicting the consequences of species loss using size-structured biodiversity approaches.pdf:pdf},
issn = {1469185X},
journal = {Biological Reviews},
keywords = {Allometric scaling,Biodiversity,Complexity,Ecosystem functioning,Extinctions,Food webs,Global change,Size spectrum,Stability},
pages = {0--0},
pmid = {26756137},
title = {{Predicting the consequences of species loss using size-structured biodiversity approaches}},
volume = {49},

file = {:C$\backslash$:/Users/Alyssa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Brown - 1999 - Vigilance, patch use and habitat selection Foraging under predation risk.pdf:pdf},
isbn = {1522-0613},
issn = {1522-0613},
journal = {Evolutionary Ecology Research},
keywords = {ecology of fear,foraging theory,giving-up density,habitat selection,patch use,predation risk,quitting harvest rate,time allocation,vigilance},
number = {1},
pages = {49--71},
pmid = {5351},
title = {{Vigilance, patch use and habitat selection: Foraging under predation risk}},
volume = {1},
year = {1999}
}
@article{Brown2001,
